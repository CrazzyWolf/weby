{% extends "baseProfile.twig" %}

{% block content %}

    <div class="text-center">
        <div class="card o-hidden border-0 shadow-lg my-5" style="display: inline-block">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-auto">
                        <div class="p-5">
                            <h1 class="h4 text-gray-900 mb-4">Create an Account</h1>
                            <form class="user" action="index.php?web=register" method="post">
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input value="{{ first_name }}" name="first_name" type="text" class="form-control form-control-user" id="exampleFirstName" placeholder="First Name">
                                    </div>
                                    <div class="col-sm-6">
                                        <input value="{{ last_name }}" name="last_name" type="text" class="form-control form-control-user" id="exampleLastName" placeholder="Last Name">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <input value="{{ email }}" name="email" type="email" class="form-control form-control-user" id="exampleInputEmail" placeholder="Email Address">
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input name="password" type="password" class="form-control form-control-user" id="exampleInputPassword" placeholder="Password">
                                    </div>
                                    <div class="col-sm-6">
                                        <input name="repeatPassword" type="password" class="form-control form-control-user" id="exampleRepeatPassword" placeholder="Repeat Password">
                                    </div>
                                </div>
                                <button name="submit" class="btn btn-primary btn-user btn-block">
                                    Register Account
                                </button>
                                {% if error != "" %}
                                    <label class="text-danger pt-4" role="alert">{{ error }}</label>
                                {% endif %}
                                <hr>
                            </form>
                            <a class="small" href="index.php?web=login">Already have an account? Login!</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock content %}
