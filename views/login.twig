{% extends "baseProfile.twig" %}

{% block content %}

    <div class="text-center">
        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="card o-hidden border-0 shadow-lg my-5" style="display: inline-block">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-auto">
                            <div class="p-5">
                                <h1 class="h4 text-gray-900 mb-4">Welcome Back</h1>
                                <form class="user" action="index.php?web=login" method="post">
                                    <div class="form-group">
                                        <input value="{{ email }}" name="email" type="email" class="form-control form-control-user" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Enter Email Address...">
                                    </div>
                                    <div class="form-group">
                                        <input name="password" type="password" class="form-control form-control-user" id="exampleInputPassword" placeholder="Password">
                                    </div>
                                    <div class="form-group">
                                        <div class="custom-control custom-checkbox small">
                                            <input type="checkbox" class="custom-control-input" id="customCheck">
                                            <!--
                                            <label class="custom-control-label" for="customCheck">Remember Me</label>
                                            -->
                                        </div>
                                    </div>
                                    <button name="submit" class="btn btn-primary btn-user btn-block">
                                        Login
                                    </button>
                                    {% if error != "" %}
                                        <label class="text-danger pt-4" role="alert">{{ error }}</label>
                                    {% endif %}
                                    <hr>
                                </form>
                                <a class="small" href="index.php?web=register">Create an Account!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock content %}
