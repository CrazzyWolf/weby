{% macro overallRating(rating) %}
    {% for i in 1..5 %}
        {% if rating > i - 0.25 %}
            <i class="fas fa-star text-warning"></i>
        {% elseif rating > i - 0.75 %}
            <i class="fas fa-star-half-alt text-warning"></i>
        {% else %}
            <i class="far fa-star text-warning"></i>
        {% endif %}
    {% endfor %}
{% endmacro %}

{% macro singleRating(rating) %}
    {% for i in 1..5 %}
        {% if rating >= i %}
            <i class="fas fa-star text-warning"></i>
        {% else %}
            <i class="far fa-star text-warning"></i>
        {% endif %}
    {% endfor %}
{% endmacro %}